<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | Texas Papa 관리자
    </title>
    <link rel="icon" type="image/png" href="/images/logo.png">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&family=Outfit:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Admin Dashboard CSS -->
    <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>

<body>
    <div class="admin-wrapper">
        <%- include('./partials/scripts') %>

            <!-- 사이드바 -->
            <%- include('./partials/sidebar', { user, currentPage }) %>

                <!-- 메인 콘텐츠 영역 -->
                <div class="main-content">
                    <!-- 헤더 -->
                    <header class="admin-header">
                        <div class="header-left">
                            <button class="sidebar-toggle" onclick="toggleSidebar()">
                                <i class="fas fa-bars"></i>
                            </button>
                            <h1 class="page-title">
                                <%= title %>
                            </h1>
                        </div>
                        <div class="header-right">
                            <div class="user-info">
                                <div class="user-avatar">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <div class="user-details">
                                    <span class="user-name">
                                        <%= user.name || user.adminName %>
                                    </span>
                                    <span class="user-role">
                                        <%= user.role==='super_admin' ? '최고 관리자' : user.role==='admin' ? '관리자' : '편집자'
                                            %>
                                    </span>
                                </div>
                            </div>
                            <a href="/console/logout" class="logout-btn" title="로그아웃">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </div>
                    </header>

                    <!-- 페이지 콘텐츠 -->
                    <main class="page-content">
                        <div class="dashboard-container">
                            <!-- 통계 카드 -->
                            <div class="stats-grid">
                                <div class="stat-card">
                                    <div class="stat-icon blue">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h3 class="stat-value">
                                            <%= stats.totalPosts %>
                                        </h3>
                                        <p class="stat-label">공지사항</p>
                                    </div>
                                </div>

                                <div class="stat-card">
                                    <div class="stat-icon green">
                                        <i class="fas fa-inbox"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h3 class="stat-value">
                                            <%= stats.totalInquiries %>
                                        </h3>
                                        <p class="stat-label">문의 건수</p>
                                    </div>
                                </div>

                                <div class="stat-card">
                                    <div class="stat-icon orange">
                                        <i class="fas fa-store"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h3 class="stat-value">
                                            <%= stats.totalFranchises %>
                                        </h3>
                                        <p class="stat-label">가맹점 수</p>
                                    </div>
                                </div>

                                <div class="stat-card">
                                    <div class="stat-icon purple">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h3 class="stat-value">0</h3>
                                        <p class="stat-label">오늘 방문자</p>
                                    </div>
                                </div>
                            </div>

                            <!-- 빠른 액세스 -->
                            <div class="quick-actions">
                                <h2 class="section-title">빠른 액세스</h2>
                                <div class="action-grid">
                                    <a href="/console/board/notice" class="action-card">
                                        <i class="fas fa-bullhorn"></i>
                                        <span>공지사항 작성</span>
                                    </a>
                                    <a href="/console/board/event" class="action-card">
                                        <i class="fas fa-calendar-alt"></i>
                                        <span>이벤트 등록</span>
                                    </a>
                                    <a href="/console/inquiry" class="action-card">
                                        <i class="fas fa-inbox"></i>
                                        <span>문의 확인</span>
                                    </a>
                                    <a href="/console/franchise" class="action-card">
                                        <i class="fas fa-store"></i>
                                        <span>가맹점 관리</span>
                                    </a>
                                </div>
                            </div>

                            <!-- 최근 활동 -->
                            <div class="recent-activities">
                                <h2 class="section-title">최근 활동</h2>
                                <div class="activity-list">
                                    <% if (stats.recentActivities.length===0) { %>
                                        <div class="empty-state">
                                            <i class="fas fa-inbox"></i>
                                            <p>최근 활동이 없습니다.</p>
                                        </div>
                                        <% } else { %>
                                            <% stats.recentActivities.forEach(activity=> { %>
                                                <div class="activity-item">
                                                    <div class="activity-icon">
                                                        <i class="fas fa-<%= activity.icon %>"></i>
                                                    </div>
                                                    <div class="activity-content">
                                                        <p class="activity-text">
                                                            <%= activity.text %>
                                                        </p>
                                                        <span class="activity-time">
                                                            <%= activity.time %>
                                                        </span>
                                                    </div>
                                                </div>
                                                <% }) %>
                                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
    </div>

</body>


</html>