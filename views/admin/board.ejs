<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | Texas Papa 관리자
    </title>
    <link rel="icon" type="image/png" href="/images/logo.png">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&family=Outfit:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Admin Dashboard CSS -->
    <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>

<body>
    <div class="admin-wrapper">
        <%- include('./partials/scripts') %>

            <!-- 사이드바 -->
            <%- include('./partials/sidebar', { user, currentPage }) %>

                <!-- 메인 콘텐츠 영역 -->
                <div class="main-content">
                    <!-- 헤더 -->
                    <header class="admin-header">
                        <div class="header-left">
                            <button class="sidebar-toggle" onclick="toggleSidebar()">
                                <i class="fas fa-bars"></i>
                            </button>
                            <h1 class="page-title">
                                <%= title %>
                            </h1>
                        </div>
                        <div class="header-right">
                            <div class="user-info">
                                <div class="user-avatar">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <div class="user-details">
                                    <span class="user-name">
                                        <%= user.name || user.adminName %>
                                    </span>
                                    <span class="user-role">
                                        <%= user.role==='super_admin' ? '최고 관리자' : user.role==='admin' ? '관리자' : '편집자'
                                            %>
                                    </span>
                                </div>
                            </div>
                            <a href="/console/logout" class="logout-btn" title="로그아웃">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </div>
                    </header>

                    <!-- 페이지 콘텐츠 -->
                    <main class="page-content">
                        <div class="board-container">
                            <!-- 헤더 -->
                            <div class="board-header">
                                <div class="board-info">
                                    <h2>
                                        <%= boardTitle %>
                                    </h2>
                                    <p class="board-count">전체 <strong>
                                            <%= pagination.totalPosts %>
                                        </strong>개</p>
                                </div>
                                <% if (boardType !=='inquiry' && boardType !=='voice' ) { %>
                                    <button class="btn-primary"
                                        onclick="location.href='/console/board/<%= boardType %>/write'">
                                        <i class="fas fa-plus"></i>
                                        새 글 작성
                                    </button>
                                    <% } %>
                            </div>

                            <!-- 검색 폼 -->
                            <div class="search-form">
                                <form method="GET" action="/console/board/<%= boardType %>">
                                    <select name="searchType" class="search-type">
                                        <option value="all" <%=search.type==='all' ? 'selected' : '' %>>전체</option>
                                        <option value="title" <%=search.type==='title' ? 'selected' : '' %>>제목</option>
                                        <option value="content" <%=search.type==='content' ? 'selected' : '' %>>내용
                                        </option>
                                    </select>
                                    <input type="text" name="search" class="search-input" placeholder="검색어를 입력하세요"
                                        value="<%= search.keyword %>">
                                    <button type="submit" class="btn-search">
                                        <i class="fas fa-search"></i>
                                        검색
                                    </button>
                                </form>
                            </div>

                            <!-- 게시글 테이블 (데스크톱 전용) -->
                            <div class="board-table-wrapper desktop-only">
                                <table class="board-table">
                                    <thead>
                                        <tr>
                                            <th width="80">번호</th>
                                            <th>제목</th>
                                            <th width="120">작성자</th>
                                            <th width="80">조회수</th>
                                            <th width="120">작성일</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (posts.length===0) { %>
                                            <tr>
                                                <td colspan="5" class="empty-row">
                                                    <div class="empty-state">
                                                        <i class="fas fa-inbox"></i>
                                                        <p>등록된 게시글이 없습니다.</p>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } else { %>
                                                <% posts.forEach((post, index)=> { %>
                                                    <tr class="board-row"
                                                        onclick="location.href='/console/board/<%= boardType %>/<%= post.id %>'">
                                                        <td>
                                                            <%= pagination.totalPosts - ((pagination.currentPage - 1) *
                                                                10 + index) %>
                                                        </td>
                                                        <td class="title-cell">
                                                            <a href="/console/board/<%= boardType %>/<%= post.id %>">
                                                                <%= post.title %>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <%= post.author %>
                                                        </td>
                                                        <td>
                                                            <%= post.views %>
                                                        </td>
                                                        <td>
                                                            <%= new Date(post.created_at).toLocaleDateString('ko-KR') %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- 게시글 모바일 카드 목록 (모바일 전용) -->
                            <div class="mobile-card-list mobile-only">
                                <% if (posts.length===0) { %>
                                    <div class="empty-state">
                                        <i class="fas fa-inbox"></i>
                                        <p>등록된 게시글이 없습니다.</p>
                                    </div>
                                    <% } else { %>
                                        <% posts.forEach((post, index)=> { %>
                                            <div class="board-card"
                                                onclick="location.href='/console/board/<%= boardType %>/<%= post.id %>'">
                                                <div class="card-header">
                                                    <span class="card-no">#<%= pagination.totalPosts -
                                                            ((pagination.currentPage - 1) * 10 + index) %></span>
                                                    <span class="card-date">
                                                        <%= new Date(post.created_at).toLocaleDateString('ko-KR') %>
                                                    </span>
                                                </div>
                                                <div class="card-title">
                                                    <%= post.title %>
                                                </div>
                                                <div class="card-footer">
                                                    <span class="card-author"><i class="fas fa-user"></i>
                                                        <%= post.author %>
                                                    </span>
                                                    <span class="card-views"><i class="fas fa-eye"></i>
                                                        <%= post.views %>
                                                    </span>
                                                </div>
                                            </div>
                                            <% }) %>
                                                <% } %>
                            </div>

                            <!-- 페이지네이션 -->
                            <% if (pagination.totalPages> 0) { %>
                                <div class="pagination">
                                    <% if (pagination.hasPrev) { %>
                                        <a href="?page=<%= pagination.currentPage - 1 %><%= search.keyword ? '&search=' + search.keyword + '&searchType=' + search.type : '' %>"
                                            class="page-btn">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                        <% } %>

                                            <% for (let i=pagination.startPage; i <=pagination.endPage; i++) { %>
                                                <a href="?page=<%= i %><%= search.keyword ? '&search=' + search.keyword + '&searchType=' + search.type : '' %>"
                                                    class="page-btn <%= i === pagination.currentPage ? 'active' : '' %>">
                                                    <%= i %>
                                                </a>
                                                <% } %>

                                                    <% if (pagination.hasNext) { %>
                                                        <a href="?page=<%= pagination.currentPage + 1 %><%= search.keyword ? '&search=' + search.keyword + '&searchType=' + search.type : '' %>"
                                                            class="page-btn">
                                                            <i class="fas fa-chevron-right"></i>
                                                        </a>
                                                        <% } %>
                                </div>
                                <% } %>
                        </div>
                    </main>
                </div>
    </div>

</body>


</html>